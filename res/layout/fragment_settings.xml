<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.displaycontrol.MainActivity" >

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Display Control"/>

    <SeekBar 
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:max="100"
        />
    
    <Switch
        android:id="@+id/BackgroundSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekbar"
        android:layout_marginTop="15dp"
        android:checked="false"
        android:text=" Background에서 동작"
        android:textColor="@android:color/holo_red_dark"
        android:padding="10dp" />
    
    <Button
       	android:layout_marginTop="15dp"
       	android:layout_below="@+id/BackgroundSwitch"
        android:id="@+id/registerNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="전화번호 등록      >>"/>
    
     <Button
       	android:layout_marginTop="15dp"
       	android:layout_below="@+id/registerNumber"
        android:id="@+id/registerUserInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="사용자 정보 등록      >>"/>

    
</RelativeLayout>
