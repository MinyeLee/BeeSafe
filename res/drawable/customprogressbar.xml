<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
    <shape>
        <gradient
                android:startColor="#707070"
                android:centerColor="#707070"
                android:centerY="1.0"
                android:endColor="#0F0F15"
                android:angle="270"
        />
       <corners 
           android:radius="4dp"
           />
    </shape>
   </item>

  <!-- Define the progress properties like start color, end color etc -->
  <item android:id="@android:id/progress">
    <clip>
        <shape>
            <gradient
                android:startColor="#48BDBC"
                android:centerColor="#48BDBC"
                android:centerY="1.0"
                android:endColor="#004A6F"
                android:angle="270"
            />
           <corners 
           android:radius="4dp"
           />
        </shape>
        
    </clip>
    </item>
</layer-list> 